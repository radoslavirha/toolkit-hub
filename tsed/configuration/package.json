{
    "name": "@radoslavirha/tsed-configuration",
    "version": "0.2.1",
    "description": "Ts.ED server configuration",
    "keywords": [
        "tsed"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com:radoslavirha/toolkit-hub.git"
    },
    "type": "module",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "require": {
            "types": "./dist/index.d.cts",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "cleanup": "rm -rf coverage dist",
        "cleanup:modules": "rm -rf node_modules",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@radoslavirha/utils": "workspace:*",
        "config": "4.1.1",
        "dotenv": "17.2.3",
        "read-pkg": "10.0.0"
    },
    "devDependencies": {
        "@radoslavirha/config-eslint": "workspace:*",
        "@radoslavirha/config-tsup": "workspace:*",
        "@radoslavirha/config-typescript": "workspace:*",
        "@radoslavirha/config-vitest": "workspace:*",
        "@swc/core": "catalog:",
        "@swc/helpers": "catalog:",
        "@types/config": "3.3.5",
        "@types/node": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "eslint": "catalog:",
        "tslib": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "typescript-eslint": "catalog:",
        "vitest": "catalog:"
    },
    "peerDependencies": {
        "@tsed/ajv": "catalog:tsed",
        "@tsed/core": "catalog:tsed",
        "@tsed/di": "catalog:tsed",
        "@tsed/json-mapper": "catalog:tsed",
        "@tsed/schema": "catalog:tsed",
        "ajv": "catalog:tsed"
    },
    "engines": {
        "node": ">= 24",
        "pnpm": ">= 10"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "README": "README.md"
}