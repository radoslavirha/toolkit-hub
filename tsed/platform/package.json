{
    "name": "@radoslavirha/tsed-platform",
    "version": "0.2.2",
    "description": "Ts.ED base platform utils",
    "keywords": [
        "tsed"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com:radoslavirha/toolkit-hub.git"
    },
    "type": "module",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "require": {
            "types": "./dist/index.d.cts",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "package.json",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "cleanup": "rm -rf coverage dist",
        "cleanup:modules": "rm -rf node_modules",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "@radoslavirha/tsed-configuration": "workspace:*",
        "@radoslavirha/utils": "workspace:*",
        "body-parser": "2.2.1",
        "compression": "1.8.1",
        "cookie-parser": "1.4.7",
        "cors": "2.8.5",
        "method-override": "3.0.0"
    },
    "devDependencies": {
        "@radoslavirha/config-eslint": "workspace:*",
        "@radoslavirha/config-tsup": "workspace:*",
        "@radoslavirha/config-typescript": "workspace:*",
        "@radoslavirha/config-vitest": "workspace:*",
        "@swc/core": "catalog:",
        "@swc/helpers": "catalog:",
        "@tsed/schema": "catalog:tsed",
        "@types/body-parser": "1.19.6",
        "@types/compression": "1.8.1",
        "@types/cookie-parser": "1.4.10",
        "@types/cors": "2.8.19",
        "@types/method-override": "3.0.0",
        "@types/supertest": "catalog:",
        "@vitest/coverage-v8": "catalog:",
        "eslint": "catalog:",
        "supertest": "catalog:",
        "tslib": "catalog:",
        "tsup": "catalog:",
        "typescript": "catalog:",
        "typescript-eslint": "catalog:",
        "vitest": "catalog:"
    },
    "peerDependencies": {
        "@tsed/ajv": "catalog:tsed",
        "@tsed/core": "catalog:tsed",
        "@tsed/di": "catalog:tsed",
        "@tsed/logger": "catalog:tsed",
        "@tsed/platform-express": "catalog:tsed",
        "@tsed/platform-http": "catalog:tsed",
        "ajv": "catalog:tsed"
    },
    "engines": {
        "node": ">= 24",
        "pnpm": ">= 10"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "README": "README.md"
}